[uwsgi]
uid={{ app_owner }}
gid={{ app_owner }}
chdir={{ project_root }}
home={{ python_venv_path }}
master=True
vacuum=True
max-requests=5000
logto={{ code_root }}logs/uwsgi.log
# socket={{ app_root }}{{ app_name }}.sock
socket=127.0.0.1:8000
chown-socket={{ app_owner }}:www-data
chmod-socket=664
wsgi-file={{ project_root }}wsgi.py
touch-reload=/etc/uwsgi/vassals/{{ app_name }}.ini
